.page-container {
  background-color: #f4f4f4;
  height: 100vh;
}
.error {
  color: #ef4f3f !important;
}
.page-container {
  height: calc(100vh - 94px);
}
.tab {
  height: 88rpx;
  background-color: #fff;
  display: flex;
}
.tab .tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab .tab-item .title {
  font-size: 28rpx;
  color: #818181;
  position: relative;
}
.tab .tab-item .title.active {
  font-weight: 500;
  font-size: 28rpx;
  color: #2a2929;
}
.tab .tab-item .title.active::after {
  content: "";
  display: block;
  height: 8rpx;
  background-image: linear-gradient(210deg, #f25c4d 25%, #e52d21 100%, #e52d21 100%);
  border-radius: 20rpx;
  width: 100%;
  height: 8rpx;
  position: absolute;
  bottom: -25rpx;
}
.tab .message-list {
  flex: 1;
  overflow: hidden;
}