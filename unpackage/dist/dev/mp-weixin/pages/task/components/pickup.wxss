.page-container {
  background-color: #f4f4f4;
  height: 100vh;
}
.error {
  color: #ef4f3f !important;
}
.box {
  height: calc(100vh - 94px);
  display: flex;
  flex-direction: column;
}
.scroll-view-wrapper {
  overflow: hidden;
  background-color: #f4f4f4;
}
.scroll-view-wrapper .task-card {
  background-color: #fff;
  margin-top: 30rpx;
  padding: 30rpx 34rpx 37rpx 39rpx;
  border-radius: 20rpx;
  margin: 30rpx 30rpx;
}
.scroll-view-wrapper .task-card .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44rpx;
  font-size: 32rpx;
  color: #2a2929;
}
.scroll-view-wrapper .task-card .header .title {
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /*设置子元素排列方式*/
  -webkit-box-orient: vertical;
  /*设置显示的行数，多出的部分会显示为...*/
  -webkit-line-clamp: 1;
}
.scroll-view-wrapper .task-card .header .tips {
  width: 104rpx;
  height: 44rpx;
  border: 2rpx solid #ef4f3f;
  border-radius: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #ef4f3f;
}
.scroll-view-wrapper .task-card .body {
  padding: 43rpx 0;
  border-bottom: 2rpx solid #f4f4f4;
}
.scroll-view-wrapper .task-card .body .time-line {
  position: relative;
  margin-left: 30rpx;
  padding: 0 30rpx;
  border-left: 2rpx dashed red;
}
.scroll-view-wrapper .task-card .body .time-line::before {
  content: "起";
  display: block;
  position: absolute;
  left: -24rpx;
  top: -1rpx;
  width: 44rpx;
  height: 44rpx;
  background: #2a2929;
  font-size: 24rpx;
  color: #ffffff;
  border-radius: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-view-wrapper .task-card .body .time-line::after {
  content: "止";
  display: block;
  width: 44rpx;
  height: 44rpx;
  bottom: -1rpx;
  background: #ef4f3f;
  font-size: 24rpx;
  color: #ffffff;
  position: absolute;
  left: -24rpx;
  border-radius: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-view-wrapper .task-card .body .line {
  font-size: 28rpx;
  color: #818181;
  margin-top: 30rpx;
}
.scroll-view-wrapper .task-card .body .line:first-child {
  margin-top: 0;
}
.scroll-view-wrapper .task-card .footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding: 33rpx 0;
}
.scroll-view-wrapper .task-card .footer .time view:first-child {
  color: #818181;
  font-size: 32rpx;
}
.scroll-view-wrapper .task-card .action {
  position: absolute;
  right: 0;
  top: 50%;
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 40rpx;
  background-color: #ef4f3f;
  color: #fff;
  font-size: 28rpx;
  border-radius: 64rpx;
  transform: translate(0, -50%);
}
.scroll-view-wrapper .task-card .action.disabled {
  background-color: #fadcd9;
}
.task-blank {
  position: absolute;
  left: 50%;
  top: 40%;
  width: 201rpx;
  text-align: center;
  padding-top: 130rpx;
  background-image: url(https://sl-driver.oss-cn-hangzhou.aliyuncs.com/images/blank%402x.png);
  background-size: contain;
  background-repeat: no-repeat;
  font-size: 24rpx;
  color: #818181;
  transform: translate(-50%, -100%);
}