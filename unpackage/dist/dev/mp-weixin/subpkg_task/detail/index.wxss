.page-container {
  background-color: #f4f4f4;
  height: 100vh;
}
.error {
  color: #ef4f3f !important;
}
.page-container {
  padding: 0 30rpx;
  overflow-x: auto;
  height: calc(100vh - 124px);
}
.page-container .box {
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
  padding: 29rpx 34rpx 36rpx 39rpx;
  box-sizing: border-box;
}
.page-container .box .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.page-container .box .header image {
  width: 50rpx;
  height: 50rpx;
}
.page-container .box .header .title {
  font-weight: 500;
  font-size: 32rpx;
  color: #2a2929;
}
.page-container .box .beaner {
  margin: 40rpx 0 40rpx 25rpx;
  border-left: 2rpx dashed #ccc;
  position: relative;
  padding: 10rpx 0;
}
.page-container .box .beaner .line {
  font-weight: 400;
  font-size: 28rpx;
  color: #818181;
  padding-left: 47rpx;
}
.page-container .box .beaner .line:last-child {
  margin-top: 20rpx;
}
.page-container .box .beaner::before {
  content: "起";
  display: block;
  background-color: #000000;
  color: #fff;
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 24rpx;
  position: absolute;
  top: 2rpx;
  left: -22rpx;
}
.page-container .box .beaner::after {
  content: "止";
  display: block;
  background-color: #ef4f3f;
  color: #fff;
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 24rpx;
  position: absolute;
  bottom: 0rpx;
  left: -22rpx;
}
.page-container .box .info-list {
  padding: 20rpx 10rpx 0;
  margin-top: 40rpx;
  border-top: 2rpx solid #f4f4f4;
}
.page-container .box .info-list .info-list-item {
  display: flex;
  justify-content: space-between;
  line-height: 1;
  padding: 20rpx 0;
  font-size: 28rpx;
}
.page-container .box .info-list .info-list-item .label {
  color: #818181;
}
.page-container .box .info-list .info-list-item .value {
  color: #000000;
}
.toolbar {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx calc(env(safe-area-inset-bottom) + 30rpx);
  font-size: 32rpx;
  background-color: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
}
.toolbar .button {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 100rpx;
  font-size: 36rpx;
}
.toolbar .secondary {
  width: 250rpx;
  color: #000000;
  background-color: #e6e6e6;
}
.toolbar .primary {
  width: 400rpx;
  color: #fff;
  background-color: #ef4f3f;
}
.toolbar .primary.block {
  width: 690rpx;
}
.toolbar .primary[disabled] {
  background-color: #fadcd9;
}